@model Category
@{
    ViewData["Title"] = "Add Category";
}
<h1>Add Category</h1>
<form method="post">
    <div class="mt-3">
    <label asp-for=Name></label>
    <input asp-for="Name" type="text" class="form-control"/>
    <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mt-3">
    <label asp-for=DisplayOrder></label>
    <input asp-for="DisplayOrder" type="text" class="form-control"/>
    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="mt-3">
    <label asp-for=OrderDate></label>
    <input asp-for="OrderDate" type="datetime"  value="@DateTime.Now.ToString("dd-MM-yyyy h:m:s")"/>
    <!--<span asp-validation-for="OrderDate" class="text-danger"></span>-->
    </div>
    <button type="Submit" class="btn btn-primary mt-4" style="width:150px" >Create</button>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}