@model Category
@{
    ViewData["Title"] = "Edit Category";
}
<h1>Edit Category</h1>
<form method="post">
    <div class="mt-3">
    <label asp-for=Name></label>
    <input asp-for="Name" type="text" class="form-control" value="@Model.Name"/>
    <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mt-3">
    <label asp-for=DisplayOrder></label>
    <input asp-for="DisplayOrder" type="text" class="form-control" value="@Model.DisplayOrder"/>
    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="mt-3">
    <label asp-for=OrderDate></label>
    <input asp-for="OrderDate" type="datetime"  value="@DateTime.Now.ToString("dd-MM-yyyy h:m:s")"/>
    <!--<span asp-validation-for="OrderDate" class="text-danger"></span>-->
    </div>
    <button type="Submit" class="btn btn-primary mt-4" style="width:150px" >Edit Category</button>
    <a class="btn btn-secondary mt-4 ml-5" style="width:150px" asp-controller="category" asp-action="index">Back to List</a>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}